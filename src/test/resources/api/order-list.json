{
  "endpoint": "/api/v1/orders",
  "method": "GET",
  "description": "Получение списка заказов",
  "parameters": [
    {
      "name": "courierId",
      "type": "number",
      "description": "Идентификатор курьера. Если указан - возвращает все активные и завершенные заказы этого курьера",
      "optional": true
    },
    {
      "name": "nearestStation",
      "type": "string",
      "description": "Фильтр станций метро. Передается в виде JSON, например: { nearestStation: [\"1\", \"2\"] }",
      "optional": true
    },
    {
      "name": "limit",
      "type": "number",
      "description": "Количество заказов на странице. Максимум: 30, По умолчанию: 30",
      "optional": true
    },
    {
      "name": "page",
      "type": "number",
      "description": "Текущая страница показа заказов. По умолчанию: 0",
      "optional": true
    }
  ],
  "request_examples": [
    {
      "description": "Все активные/завершенные заказы курьера",
      "query": "/v1/orders?courierId=1"
    },
    {
      "description": "Все активные/завершенные заказы курьера на станциях \"Бульвар Рокоссовского\"(1) или \"Черкизовская\"(2)",
      "query": "/v1/orders?courierId=1&nearestStation=[\"1\", \"2\"]"
    },
    {
      "description": "10 заказов, доступных для взятия курьером",
      "query": "/v1/orders?limit=10&page=0"
    },
    {
      "description": "10 заказов, доступных для взятия курьером возле метро \"Калужская\"(110)",
      "query": "/v1/orders?limit=10&page=0&nearestStation=[\"110\"]"
    }
  ],
  "responses": {
